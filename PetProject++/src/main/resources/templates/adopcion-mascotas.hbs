<div id="carousel" class="carousel slide carousel-dark text-center" data-bs-ride="carousel">
  <div class="carousel-inner py-4">
      <h1>Perros</h1>
    <!-- Single item -->
    {{#if perros}}
    {{#each perros}}
    <div class="carousel-item {{#if active}}active{{/if}}">
      <div class="container">
        <div class="row">
        {{#each mascotaFoto}}
          <div class="col-lg-4 col-md-12">
            <div class="card">
              <img
                src="data:image/png;base64,{{foto}}"
                class="card-img-top"
                alt="..."
                height="300"
              />
              <div class="card-body">
                <h5 class="card-title">{{mascota.nombre}}</h5>
                <p class="card-text">
                  {{mascota.descripcionFisica}}
                </p>
                <a href="./{{formId}}" class="btn btn-secondary" style="background-color: blueviolet;">Adoptar</a>
              </div>
            </div>
          </div>
        {{/each}}
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
        <h2>En este momento no tenemos perros en adopción!</h2>
    {{/if}}
  </div>
  
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel"  data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel"  data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>    
 

<div id="carouselGatos" class="carousel slide carousel-dark text-center" data-bs-ride="carousel">
  <div class="carousel-inner py-4">
      <h1>Gatos</h1>
      <!-- Single item -->
      {{#if gatos}}
      {{#each gatos}}
          <div class="carousel-item {{#if active}}active{{/if}}">
              <div class="container">
                  <div class="row">
                      {{#each mascotaFoto}}
                          <div class="col-lg-4 col-md-12">
                              <div class="card">
                                  <img
                                          src="data:image/png;base64,{{foto}}"
                                          class="card-img-top"
                                          alt="..."
                                          height="300"
                                  />
                                  <div class="card-body">
                                      <h5 class="card-title">{{mascota.nombre}}</h5>
                                      <p class="card-text">
                                          {{mascota.descripcionFisica}}
                                      </p>
                                      <a href="./{{formId}}" class="btn btn-secondary" style="background-color: blueviolet;">Adoptar</a>
                                  </div>
                              </div>
                          </div>
                      {{/each}}
                  </div>
              </div>
          </div>
      {{/each}}
      {{else}}
          <h2>En este momento no tenemos gatos en adopción!</h2>
      {{/if}}
  </div>
  
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselGatos"  data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselGatos"  data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div> 

