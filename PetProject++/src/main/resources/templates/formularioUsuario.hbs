<main class="container">

    <h1 class="tituloFormulario">Registro de usuario</h1>
    <div class="row">
        <div class="col-12">
            <form action="../users" method="post" class="border-top border-2 border-dark" id="formulario">

                <div class="row mb-4 mt-3 ">
                    <div class="col-6">
                        <label for="Nombre" class="form-label">Nombre*</label>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" name="user.nombre">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <label for="apellido" class="form-label">Apellido*</label>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" name="user.apellido">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <label for="DNI" class="form-label">Documento*</label>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-6">
                                <select name="user.tipoDocumento" id="" class="form-select">
                                    <option value="DNI">DNI</option>
                                    <option value="PASAPORTE">Pasaporte</option>
                                    <option value="PRECARIA">Precaria</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="user.nroDocumento">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <label for="Contraseña" class="form-label">Nombre de usuario*</label>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" name="user.sesion.username">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <label for="Contraseña" class="form-label">Contraseña*</label>
                    </div>
                    <div class="col-6">
                        <input type="password" class="form-control" name="user.sesion.password">
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-6">
                        <label for="Contraseña" class="form-label">Confirmar contraseña*</label>
                    </div>
                    <div class="col-6">
                        <input type="password" class="form-control">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <label for="Fecha" class="form-label">Fecha de nacimiento</label>
                    </div>
                    <div class="col-6">
                        <input type="date" class="form-control" name="user.fechaNacimiento">
                    </div>
                </div>

                <h3 class="mt-3">Detalles de contacto</h3>
                <div class="row mt-3">
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Calle</label>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="direccion.calle">
                            </div>

                        </div>

                    </div>
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Numero</label>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="direccion.numero">
                            </div>

                        </div>

                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Departamento, Municipio o Comuna</label>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="direccion.departamento">
                            </div>

                        </div>

                    </div>
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Codigo postal</label>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="direccion.codigoPostal">
                            </div>

                        </div>

                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Ciudad</label>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" name="direccion.ciudad.nombre">
                            </div>

                        </div>

                    </div>
                    <div class="col-6">

                        <div class="row">
                            <div class="col-6">
                                <label for="calle" class="form-label">Provincia</label>
                            </div>
                            <div class="col-6">
                                <select name="direccion.ciudad.provincia.id" id="" class="form-select">
                                    <option value="none" selected disabled hidden>
                                        Select an Option
                                    </option>
                                {{#each provincias}}
                                    <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                                </select>
                            </div>

                        </div>

                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="row ">
                            <div class="col-3">
                                <label for="" class="form-label">
                                    Telefono*
                                </label>
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" name="user.contacto.celular">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="row ">
                            <div class="col-3">
                                <label for="" class="form-label">
                                    Correo*
                                </label>
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" placeholder="Ejemplo@gmail.com" name="user.contacto.mail">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-12 d-flex justify-content-evenly " style="width:600px">
                        <div>
                            <button type="button" class="col-12 btn btn-dark mb-3 mt-5" onclick="validar()" style="background-color :blueviolet; width: 150px;">Cancelar</button>

                        </div>
                        <div>
                            <button type="submit" class="col-12 btn btn-dark mb-3 mt-5" onclick="validar()" style="background-color :blueviolet; width: 150px;">Enviar</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <div>
                            <div class="form-check mb-3 ">
                                <input type="checkbox" name="terminos" class="form-check-input">
                                <label for="terminos" class="form-check-label terminos">Terminos y condiciones</label>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>


</main>
