    <main class="container">
        <h1>ONG</h1>
        <div class="row mt-4">
            <div class="col-12">
                <form action="../ongs" method="post">
                    <div class="row">
                        <div class="col-6">
                            <label for="" class="form-label ">Nombre</label>
                            <input type="text" class="form-control" name="nombre">

                            <label for="calle" class="form-label">Calle</label>
                            <input type="text" class="form-control" name="direccion.calle">

                            <label for="calle" class="form-label">Ciudad</label>
                            <input type="text" class="form-control" name="direccion.ciudad.nombre">

                            <label for="calle" class="form-label">Provincia</label>
                            <select name="direccion.ciudad.provincia.id" id="" class="form-select">
                                <option value="none" selected disabled hidden>
                                    Select an Option
                                </option>
                                {{#each provincias}}
                                    <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="calle" class="form-label">Codigo postal</label>
                            <input type="text" class="form-control" name="direccion.codigoPostal">

                            <label for="calle" class="form-label">Numero</label>
                            <input type="text" class="form-control" name="direccion.numero">

                            <label for="calle" class="form-label">Departamento, Municipio o Comuna</label>
                            <input type="text" class="form-control" name="direccion.departamento">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6">
                            <h3>Formato fotos</h3>
                            <label for="" class="form-label ">Nivel de calidad</label>
                            <input type="text" class="form-control" name="nivelCalidad">
                            <label for="" class="form-label ">Tamaño de la foto</label>
                            <input type="text" class="form-control" name="sizeFoto">
                        </div>
                        <div class="col-6">
                            <h3>agregar vonluntario</h3>
                            <label for="" class="form-label ">Mail del voluntario</label>
                            <div class="input-group ">
                                <input type="text" class="form-control mb-0" placeholder="Ej.: nombre@gmail.com" aria-label="Recipient's username" aria-describedby="button-addon2">
                                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Buscar</button>
                              </div>
                              <div class="contains-boton mt-4 d-flex justify-content-center">
                                <button type="button" class="btn btn-primary" style="margin-right: 10px;">agregar</button>
                                <button type="button" class="btn btn-primary">eliminar</button>
                              </div>
                        </div>

                    </div>
                    <h3 class="mt-3">Agregar preguntas</h3>
                    <div class="row mt-3">

                        <div class="col-10">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-2">
                            <input type="button" class="boton " value="AGREGAR" onclick="agregar()">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="preguntas">
                                <div class="prueba mt-3">
                                    <div class="pregunta ">
                                        <p> pregunta de la ONG</p>
                                    </div>
                                    <div class="eliminarPregunta" onclick="prueba(this)">
                                        <p> x</p>
                                    </div>
                                </div>
                                <div class="prueba mt-3">
                                    <div class="pregunta ">
