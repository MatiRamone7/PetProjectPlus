    <div class="container">
        <div class="main-body">
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src="img/Avatar/avatar-gato.png" alt="Usuario" class="rounded-circle" width="150">
                          <div class="mt-3">
                            <h4>{{usuario.nombre}} {{usuario.apellido}}</h4>
                          </div>

                        <br>
                        <div class="col-sm-6 mb-3">
                            <div class="col-sm-9 text-secondary text-center">
                                <input  type="button" class="btn btn-secondary px-4"  style="background-color: blueviolet;" value="Agregar Mascota" >
                            </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-8">
					<div class="card">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Nombre Completo</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input id="nombre" disabled type="text" class="form-control" value="{{usuario.nombre}} {{usuario.apellido}}">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input id="email" disabled type="text" class="form-control" value="{{usuario.contacto.mail}}">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Telefono</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input id="telefono" disabled type="text" class="form-control" value="{{usuario.contacto.celular}}">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Direccion</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input id="direccion" disabled type="text" class="form-control" value="{{usuario.direccion.calle}} {{usuario.direccion.numero}}, {{usuario.direccion.ciudad.nombre}}, {{usuario.direccion.ciudad.provincia.nombre}}">
								</div>
							</div>
                            <div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<input id="editar" type="button" class="btn btn-secondary px-4"  style="background-color: blueviolet;" value="Editar" onclick="guardarPerfil()">
								</div>
							</div>
							<div class="row" hidden>
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<input id="guardar" type="button" class="btn btn-secondary px-4"  style="background-color: blueviolet;" value="Guardar Cambios" onclick="guardarPerfil()">
								</div>
							</div>
						</div>
					</div>
    
                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div id="carousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    {{#each usuario.mascotas}}
                                        <div class="carousel-item" data-bs-interval="3000">
                                            <div class="card">
                                                <img
                                                        src="./img/TomHanks/Amelie.jpg"
                                                        class="card-img-top"
                                                        alt="..."
                                                        height="300"
                                                />
                                                <div class="card-body">
                                                    {{#if descripcionFisica}}
                                                        <h5 class="card-title">{{nombre}}</h5>
                                                        <p class="card-text">
                                                            {{descripcionFisica}}
                                                        </p>
                                                    {{else}}
                                                        <h5 class="card-title mb-4">{{nombre}}</h5>
                                                        <br>
                                                    {{/if}}
                                                    <a href="#!" class="btn btn-secondary"  style="background-color: blueviolet;">Editar</a>
                                                    <a href="../Dar-en-Adopcion/{{id}}" class="btn btn-secondary"  style="background-color: blueviolet;">Dar en Adopcion</a>
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}

                                  <div class="carousel-item active" data-bs-interval="3000">
                                      <div class="card">
                                          <img
                                                  src="./img/TomHanks/Pantufla.jpg!d"
                                                  class="card-img-top"
                                                  alt="..."
                                                  height="300"
                                          />
                                          <div class="card-body">
                                              <h5 class="card-title">Pantufla</h5>
                                              <p class="card-text">
                                                  Gata, Hembra, castrada, 3 años
                                              </p>
                                              <a href="#!" class="btn btn-secondary"  style="background-color: blueviolet;">Editar</a>
                                          </div>
                                      </div>
                                  </div>
                            
                                  <div class="carousel-item" data-bs-interval="3000">
                                    <div class="card">
                                        <img
                                          src="./img/TomHanks/Amelie.jpg"
                                          class="card-img-top"
                                          alt="..."
                                          height="300"
                                        />
                                        <div class="card-body">
                                          <h5 class="card-title">Amélie</h5>
                                          <p class="card-text">
                                            Gata, Hembra, castrada, 6 años
                                          </p>
                                          <a href="#!" class="btn btn-secondary"  style="background-color: blueviolet;">Editar</a>
                                        </div>
                                      </div>
                                  </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carousel"  data-bs-slide="prev">
                                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carousel"  data-bs-slide="next">
                                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                  <span class="visually-hidden">Next</span>
                                </button>
                              </div>    
                        </div>
                    </div>
                 </div>
    
            </div>
        </div>
    </div>


