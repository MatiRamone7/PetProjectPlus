    <main class="container">
        <h3>{{caracteristica.descripcion}}</h3>
        <div class="row mt-3">
            <div class="col-12">
                <div class="preguntas" id='padre'>

                    {{#each caracteristicaFiltrable}}
                    <form action="../../../caracteristicas/{{caracteristica.id}}/{{id}}" method="post" class="form-agregar-pregunta">
                        <div class="prueba mt-3" id="Form{{id}}">

                            <label class="pregunta" name="opcion">
                                {{valor}}
                            </label>

                            <button type="submit" class="eliminarPregunta">
                                <p> x</p>
                            </button>
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="row mt-5 mb-3">
            <div class="col-12">
                <label for="apellido" class="form-label">Respuesta a agregar</label>
                <div class="row">
                    <form action="../../../caracteristicas/{{caracteristica.id}}" method="post" class="col-12 form-agregar-pregunta" id="formulario">
                        <div class="row">
                            <div class="col-8">
                                <input type="text" class="form-control" id='nuevaPregunta' name="descripcion">
                            </div>
                            <div class="col-4">
                                <button type="submit" class="col-12 btn btn-dark" style="background-color :blueviolet; width: 150px;">Agregar</button>
                                <!--<button type="submit" class="col-12 btn btn-dark" style="background-color :blueviolet; width: 150px;margin-left: 10px;">Guardar</button>-->
                            </div>
